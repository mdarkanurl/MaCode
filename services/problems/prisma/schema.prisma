generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DifficultyLevel {
  EASY
  MEDIUM
  HARD
}

enum SubmitStatus {
  PENDING
  ACCEPTED
  WRONG_ANSWER
  EXECUTION_ERROR
  TIME_OUT
}

enum Language {
  JavaScript
  Python
  Go
  Rust
  C
  C_Plus_Plus
  C_Sharp
  Java
  SQL
  Swift
}

model Problem {
  id          String         @id
  title       String
  description String
  functionName String
  language     Language
  difficulty  DifficultyLevel
  testCases   Json[]
  tags        String[]
  isSolved    Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  submissions Submit[]
  discussions Discussion[]
}

model Submit {
  id         Int      @id @default(autoincrement())
  userId     Int
  problemId  String
  problem    Problem  @relation(fields: [problemId], references: [id])
  status     String
  language   Language
  code   String
  runtimeMs  Int?
  memoryKb   Int?
  createdAt  DateTime @default(now())
}

model Discussion {
  id         Int      @id @default(autoincrement())
  userId     String
  problemId  String
  problem    Problem  @relation(fields: [problemId], references: [id])
  content    String
  createdAt  DateTime @default(now())
}
